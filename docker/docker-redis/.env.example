# AWS Configuration
AWS_PROFILE=default
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=5001
LOG_LEVEL=INFO
RATE_LIMIT=60  # Requests per minute per IP
CORS_ALLOWED_ORIGINS=*  # Use comma-separated domains in production

# Update and Cache Settings
UPDATE_INTERVAL=300  # 5 minutes
CACHE_EXPIRY=600    # 10 minutes

# Instance Types to Monitor (comma-separated)
INSTANCE_TYPES=t2.micro,t2.small,t2.medium,t3.micro,t3.small,t3.medium
